{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
  {% if error %}
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      {{ error|trans({}, 'FOSUserBundle') }}
    </div>
  {% endif %}

  <form id="contactForm" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
        <label>{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <input type="text" class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" id="username" name="_username" value="{{ last_username }}" required="required">
        <p class="help-block text-danger"></p>
      </div>
    </div>
    <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
        <label>{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" id="password" name="_password" required="required">
        <p class="help-block text-danger"></p>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group col-xs-12">
        <input type="submit" id="_submit" name="_submit" class="btn btn-default" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
      </div>
    </div>
  </form>
{% endblock fos_user_content %}
